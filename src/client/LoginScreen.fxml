<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane id="loginScreen" maxHeight="600.0"
	maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0"
	prefWidth="800.0" snapToPixel="false"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="client.LoginController">
	<stylesheets>
		<URL value="@style.css" />
	</stylesheets>
	<children>
		<GridPane prefHeight="600.0" prefWidth="800.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<GridPane GridPane.columnIndex="1"
					GridPane.halignment="CENTER" GridPane.rowIndex="1"
					GridPane.valignment="CENTER">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES"
							minWidth="10.0" prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							minWidth="200.0" prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							minWidth="10.0" prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints maxHeight="99.0" minHeight="0.0"
							prefHeight="58.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="210.0" minHeight="31.0"
							prefHeight="109.0" vgrow="NEVER" />
						<RowConstraints maxHeight="155.0" minHeight="0.0"
							prefHeight="34.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label alignment="CENTER" centerShape="true"
							maxHeight="20.0" maxWidth="58.0" minHeight="20.0" minWidth="58.0"
							prefHeight="20.0" prefWidth="58.0" styleClass="loginLabel"
							text="Enter IP" textFill="WHITE" GridPane.columnIndex="1"
							GridPane.halignment="CENTER" GridPane.hgrow="NEVER"
							GridPane.rowIndex="1" GridPane.valignment="CENTER"
							GridPane.vgrow="NEVER">
							<GridPane.margin>
								<Insets top="30.0" />
							</GridPane.margin>
						</Label>
						<Label alignment="CENTER" centerShape="true"
							maxHeight="20.0" maxWidth="135.0" minHeight="20.0"
							minWidth="113.0" prefHeight="20.0" prefWidth="135.0"
							styleClass="loginLabel" text="Enter Username" textFill="WHITE"
							GridPane.columnIndex="1" GridPane.halignment="CENTER"
							GridPane.rowIndex="1" GridPane.valignment="CENTER"
							GridPane.vgrow="NEVER">
							<GridPane.margin>
								<Insets bottom="200.0" />
							</GridPane.margin>
						</Label>
						<TextField fx:id="userField" alignment="CENTER"
							centerShape="true" maxHeight="27.0" maxWidth="167.0"
							minHeight="27.0" minWidth="167.0" onAction="#moveToPassword"
							prefHeight="27.0" prefWidth="167.0" promptText="Username"
							GridPane.columnIndex="1" GridPane.halignment="CENTER"
							GridPane.rowIndex="1" GridPane.valignment="CENTER">
							<GridPane.margin>
								<Insets bottom="150.0" top="10.0" />
							</GridPane.margin>
						</TextField>
						<Button fx:id="joinButton" alignment="CENTER"
							maxHeight="38.0" maxWidth="100.0" minHeight="38.0"
							minWidth="100.0" mnemonicParsing="false" onAction="#joinPressed"
							prefHeight="38.0" prefWidth="100.0" styleClass="joinButton"
							text="Start" GridPane.columnIndex="1"
							GridPane.halignment="CENTER" GridPane.hgrow="NEVER"
							GridPane.rowIndex="1" GridPane.valignment="CENTER"
							GridPane.vgrow="NEVER">
							<GridPane.margin>
								<Insets top="200.0" />
							</GridPane.margin>
							<cursor>
								<Cursor fx:constant="HAND" />
							</cursor>
						</Button>
						<TextField fx:id="ipField" alignment="CENTER"
							centerShape="true" maxHeight="27.0" maxWidth="167.0"
							minHeight="27.0" minWidth="167.0"
							onAction="#startIfFieldsFulfilled" prefHeight="27.0"
							prefWidth="167.0" scaleShape="false" text="localhost"
							GridPane.columnIndex="1" GridPane.halignment="CENTER"
							GridPane.hgrow="NEVER" GridPane.rowIndex="1"
							GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
							<GridPane.margin>
								<Insets top="90.0" />
							</GridPane.margin>
						</TextField>
						<PasswordField fx:id="passField" alignment="CENTER"
							centerShape="true" maxHeight="27.0" maxWidth="167.0"
							minHeight="27.0" minWidth="167.0" onAction="#moveToIP"
							prefHeight="27.0" prefWidth="167.0" promptText="Password"
							GridPane.columnIndex="1" GridPane.halignment="CENTER"
							GridPane.hgrow="NEVER" GridPane.rowIndex="1"
							GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
							<GridPane.margin>
								<Insets bottom="20.0" />
							</GridPane.margin>
						</PasswordField>
						<Label alignment="CENTER" centerShape="true"
							maxHeight="20.0" maxWidth="135.0" minHeight="20.0"
							minWidth="113.0" prefHeight="20.0" prefWidth="135.0"
							styleClass="loginLabel" text="Enter Password" textFill="WHITE"
							GridPane.columnIndex="1" GridPane.halignment="CENTER"
							GridPane.hgrow="NEVER" GridPane.rowIndex="1"
							GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
							<GridPane.margin>
								<Insets bottom="74.0" />
							</GridPane.margin>
						</Label>
					</children>
					<effect>
						<Reflection fraction="0.34" topOffset="10.0"
							topOpacity="0.14" />
					</effect>
				</GridPane>
				<ImageView fitHeight="106.0" fitWidth="118.0"
					pickOnBounds="true" preserveRatio="true" scaleX="3.0" scaleY="2.0"
					GridPane.columnIndex="1" GridPane.halignment="CENTER"
					GridPane.hgrow="NEVER" GridPane.valignment="CENTER"
					GridPane.vgrow="NEVER">
					<image>
						<Image url="@../image/club21Clubs.png" />
					</image>
					<effect>
						<Blend mode="OVERLAY" />
					</effect>
				</ImageView>
				<Label fx:id="errorLabel" alignment="CENTER"
					contentDisplay="CENTER" text="Error - Cannot connect to server"
					textFill="RED" visible="false" GridPane.columnIndex="1"
					GridPane.halignment="CENTER" GridPane.hgrow="NEVER"
					GridPane.rowIndex="2" GridPane.valignment="CENTER"
					GridPane.vgrow="NEVER">
					<font>
						<Font name="System Font" size="13.0" />
					</font>
					<GridPane.margin>
						<Insets bottom="60.0" />
					</GridPane.margin>
				</Label>
				<Label onMouseClicked="#signUp" text="Sign up"
					textFill="WHITE" underline="true" GridPane.columnIndex="1"
					GridPane.halignment="CENTER" GridPane.hgrow="NEVER"
					GridPane.rowIndex="2" GridPane.valignment="BOTTOM"
					GridPane.vgrow="NEVER">
					<GridPane.margin>
						<Insets top="100.0" />
					</GridPane.margin>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Label>
			</children>
		</GridPane>
	</children>
</AnchorPane>
