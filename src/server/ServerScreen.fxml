<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: Black;" stylesheets="@../client/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.ServerController">
   <children>
      <VBox alignment="CENTER" minHeight="-Infinity" prefHeight="150.0" prefWidth="100.0">
         <children>
            <Label text="Port Number" textFill="WHITE">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Label>
      		<TextField fx:id="portField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#startServer" prefHeight="27.0" prefWidth="123.0" promptText="Enter Port" styleClass="loginTextField" stylesheets="@../client/style.css" />
      		<Label text="IP Address" textFill="WHITE" />
      		<TextField fx:id="ipField" alignment="CENTER" disable="true" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="266.0" promptText="Displayed on start" styleClass="loginTextField" stylesheets="@../client/style.css" />
      		<Button fx:id="startButton" mnemonicParsing="false" onAction="#startServer" prefHeight="31.0" prefWidth="109.0" styleClass="joinButton" stylesheets="@../client/style.css" text="Start Server">
               <VBox.margin>
                  <Insets top="6.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</StackPane>
